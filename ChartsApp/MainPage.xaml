<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChartsApp"
             xmlns:microChart="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="ChartsApp.MainPage">
    <ScrollView>
        <StackLayout>
            <StackLayout Margin="0,20,0,50">
                <microChart:ChartView x:Name="Chart1" HeightRequest="230"   Scale="1.13"  EnableTouchEvents="True" />
            </StackLayout>

            <StackLayout Margin="0,50,0,50">
                <microChart:ChartView x:Name="Chart2" HeightRequest="230"   Scale="1.13"  EnableTouchEvents="True" />
            </StackLayout>

            <StackLayout Margin="0,50,0,50">
                <microChart:ChartView x:Name="Chart3" HeightRequest="230"   Scale="1.13"  EnableTouchEvents="True" />
            </StackLayout>


            <StackLayout Margin="0,50,0,50">
                <microChart:ChartView x:Name="Chart4" HeightRequest="230"   Scale="1.13"  EnableTouchEvents="True" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
